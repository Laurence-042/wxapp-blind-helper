.table-view {
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
  width: 100%;
}

.col-2 {
  flex: 0 0 auto;
  width: 40%;
  text-align: center;
  padding: 40rpx 0;
  font-size: 30rpx;
}

.left{
  float: left
}

.right{
  float: right;
}

.api-status {
  text-align: right;
}

.api-choose {
  text-align: left;
  font-size: 4.5vh;
}

.api-now {
  text-align: center;
  line-height: 6vh;
  color: white;
  background: #66ccff;
  border-radius: 5vh;
  font-size: 3.5vh;
}

.pull-img{
  width: 3vh;
  height: 3vh;
}

.output-text{
  padding: 2vh;
  text-align: center;
  width: 100%;
  border: solid;
  border-width:0.2vh 0;
}

.btn{
  width:20vh;
  height: 20vh;
}

